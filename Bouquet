function setup() {
  createCanvas(800, 500);
  background(255);
  noLoop();

  // Girasoli
  disegnaGirasole(200, 300);
  disegnaGirasole(260, 250);

  // Rose rosse
  disegnaRosa(350, 270);
  disegnaRosa(400, 320);

  // Gigli rosa-arancio
  disegnaGiglio(500, 280, color(255, 150, 150));
  disegnaGiglio(560, 230, color(255, 200, 120));

  // Steli
  stroke(0, 150, 0);
  strokeWeight(4);
  line(200, 500, 200, 330);
  line(260, 500, 260, 280);
  line(350, 500, 350, 300);
  line(400, 500, 400, 350);
  line(500, 500, 500, 310);
  line(560, 500, 560, 260);
}

// Disegno Girasole
function disegnaGirasole(x, y) {
  noStroke();
  fill(255, 204, 0);
  for (let i = 0; i < 20; i++) {
    ellipse(x + cos(TWO_PI * i / 20) * 40, y + sin(TWO_PI * i / 20) * 40, 25, 50);
  }
  fill(100, 50, 0);
  ellipse(x, y, 50, 50);
}

// Disegno Rosa
function disegnaRosa(x, y) {
  noStroke();
  fill(200, 0, 50);
  for (let r = 20; r > 0; r -= 5) {
    ellipse(x, y, r * 2, r * 2);
  }
}

// Disegno Giglio
function disegnaGiglio(x, y, c) {
  noStroke();
  fill(c);
  for (let i = 0; i < 6; i++) {
    ellipse(x + cos(TWO_PI * i / 6) * 30, y + sin(TWO_PI * i / 6) * 30, 25, 60);
  }
  fill(255, 200, 0);
  ellipse(x, y, 15, 15);
}
